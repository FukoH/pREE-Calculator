.header {
    display: flex;
    align-items: center;
    height: 20%; /* 占据页面高度的 1/5 */
    background-color: #f2f2f2;
    padding: 0 20rpx; /* 使用 rpx 作为单位 */
  }
  
  .logo {
    flex: 1;
  }
  
  .logo image {
    max-width: 100%;
    height: auto;
  }
  
  .title {
    flex: 4;
    text-align: right;
    font-size: 32rpx; /* 使用 rpx 作为单位 */
    font-weight: bold;
  }
  